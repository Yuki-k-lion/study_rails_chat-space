.textArea_box
  .textArea__user
    %h3.textArea__name
      = message.user.name
      %span.textArea__timestamp
        = message.created_at
    - if message.content.present?
      %p.textArea__message
        = message.content
    - if message.image.present?
      = image_tag message.image.url, class: 'textArea__image'
